  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Start front-end",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3006",
      "webRoot": "${workspaceFolder}"
    },
  ]
}